@page
@model StockGame.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<a asp-page-handler="LoginAs" asp-route-id="@Model.ApplicationUser.Id" method="get" />Login as @Model.ApplicationUser.FullName</a>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUser.PasswordHash" class="form-control" />
            <div class="form-group">
                <label asp-for="ApplicationUser.FirstMidName" class="control-label"></label>
                <input asp-for="ApplicationUser.FirstMidName" class="form-control" />
                <span asp-validation-for="ApplicationUser.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.LastName" class="control-label"></label>
                <input asp-for="ApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ApplicationUser.Id" />
            <div class="form-group">
                <label asp-for="ApplicationUser.UserName" class="control-label"></label>
                <input asp-for="ApplicationUser.UserName" class="form-control" />
                <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Roles</div>
                <div class="panel-body">
                <div class="form-group">
                    <div class="checkbox">
                        <label><input asp-for="IsStudent" />Student</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label><input asp-for="IsTeacher" />Teacher</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label><input asp-for="IsAdmin" />Admin</label>
                    </div>
                </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Override Password</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="OverridePassword.Password"></label>
                        <input asp-for="OverridePassword.Password" class="form-control" />
                        <span asp-validation-for="OverridePassword.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OverridePassword.ConfirmPassword"></label>
                        <input asp-for="OverridePassword.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="OverridePassword.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.NormalizedUserName" class="control-label"></label>
                <input asp-for="ApplicationUser.NormalizedUserName" class="form-control" />
                <span asp-validation-for="ApplicationUser.NormalizedUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Email" class="control-label"></label>
                <input asp-for="ApplicationUser.Email" class="form-control" />
                <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.NormalizedEmail" class="control-label"></label>
                <input asp-for="ApplicationUser.NormalizedEmail" class="form-control" />
                <span asp-validation-for="ApplicationUser.NormalizedEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ApplicationUser.EmailConfirmed" /> @Html.DisplayNameFor(model => model.ApplicationUser.EmailConfirmed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.SecurityStamp" class="control-label"></label>
                <input asp-for="ApplicationUser.SecurityStamp" class="form-control" />
                <span asp-validation-for="ApplicationUser.SecurityStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.ConcurrencyStamp" class="control-label"></label>
                <input asp-for="ApplicationUser.ConcurrencyStamp" class="form-control" />
                <span asp-validation-for="ApplicationUser.ConcurrencyStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.PhoneNumber" class="control-label"></label>
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ApplicationUser.PhoneNumberConfirmed" /> @Html.DisplayNameFor(model => model.ApplicationUser.PhoneNumberConfirmed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ApplicationUser.TwoFactorEnabled" /> @Html.DisplayNameFor(model => model.ApplicationUser.TwoFactorEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.LockoutEnd" class="control-label"></label>
                <input asp-for="ApplicationUser.LockoutEnd" class="form-control" />
                <span asp-validation-for="ApplicationUser.LockoutEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ApplicationUser.LockoutEnabled" /> @Html.DisplayNameFor(model => model.ApplicationUser.LockoutEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.AccessFailedCount" class="control-label"></label>
                <input asp-for="ApplicationUser.AccessFailedCount" class="form-control" />
                <span asp-validation-for="ApplicationUser.AccessFailedCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

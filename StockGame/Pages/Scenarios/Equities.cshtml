@page
@model StockGame.Pages.Scenarios.EquitiesModel

@{
    ViewData["Title"] = "Scenario Equities";
}

<h2>Scenario Equities</h2>

<h4>@Model.Scenario.Name</h4>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Scenario.Id" />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Selected?
                </th>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equities[0].Equity.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equities[0].Equity.Industry.Name)
                </th>
            </tr>
        </thead>
        <tbody>
@for (int i = 0; i < Model.Equities.Count; i++) {
            <tr>
                <td>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="@Model.Equities[i].Selected" />
                            </label>
                        </div>
                    </div>
                </td>
                <td>
                     <img style="height:50%" src="@Url.Content(Model.Equities[i].Equity.ThumbPath)" />
                </td>
                <td>
                    <input type="hidden" asp-for="@Model.Equities[i].Equity.Id" />
                    @Html.DisplayFor(modelItem => Model.Equities[i].Equity.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Equities[i].Equity.Industry.Name)
                </td>
            </tr>
}
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>

</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>


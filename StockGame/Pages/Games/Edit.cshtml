@page
@model StockGame.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Game</h4>
<hr />
<div>
    <a asp-page="./Enrolments" asp-route-id="@Model.Game.Id">Edit Group Enrolments</a>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.Id" />
            <div class="form-group">
                <label asp-for="Game.ScenarioId" class="control-label"></label>
                <select asp-for="Game.ScenarioId" class="form-control" asp-items="ViewBag.ScenarioId"></select>
                <span asp-validation-for="Game.ScenarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.CurrentEpisodeIndex" class="control-label"></label>
                <input asp-for="Game.CurrentEpisodeIndex" class="form-control" />
                <span asp-validation-for="Game.CurrentEpisodeIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.InitialCash" class="control-label"></label>
                <input asp-for="Game.InitialCash" class="form-control" />
                <span asp-validation-for="Game.InitialCash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Game.AllowJoin" /> @Html.DisplayNameFor(model => model.Game.AllowJoin)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">AllowJoinEpisodeRange.MinIndex</label>
                <input asp-for="Game.AllowJoinEpisodeRange.MinIndex" class="form-control" />
                <span asp-validation-for="Game.AllowJoinEpisodeRange.MinIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">AllowJoinEpisodeRange.MaxIndex</label>
                <input asp-for="Game.AllowJoinEpisodeRange.MaxIndex" class="form-control" />
                <span asp-validation-for="Game.AllowJoinEpisodeRange.MaxIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ShowLeverageEpisodeRange.MinIndex</label>
                <input asp-for="Game.ShowLeverageEpisodeRange.MinIndex" class="form-control" />
                <span asp-validation-for="Game.ShowLeverageEpisodeRange.MinIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ShowLeverageEpisodeRange.MaxIndex</label>
                <input asp-for="Game.ShowLeverageEpisodeRange.MaxIndex" class="form-control" />
                <span asp-validation-for="Game.ShowLeverageEpisodeRange.MaxIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ShowPriceEarningsEpisodeRange.MinIndex</label>
                <input asp-for="Game.ShowPriceEarningsEpisodeRange.MinIndex" class="form-control" />
                <span asp-validation-for="Game.ShowPriceEarningsEpisodeRange.MinIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ShowPriceEarningsEpisodeRange.MaxIndex</label>
                <input asp-for="Game.ShowPriceEarningsEpisodeRange.MaxIndex" class="form-control" />
                <span asp-validation-for="Game.ShowPriceEarningsEpisodeRange.MaxIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

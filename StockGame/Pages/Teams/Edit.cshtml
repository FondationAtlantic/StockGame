@page
@model StockGame.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Éditer";
}

<h2>Éditer</h2>

<h4>Équipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.Id" />
            <div class="form-group">
                <label asp-for="Team.Group" class="control-label"></label>
                <select asp-for="Team.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                <span asp-validation-for="Team.GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.OwnerUser" class="control-label"></label>
                <select asp-for="Team.OwnerUserId" class="form-control" asp-items="ViewBag.OwnerUserId"></select>
                <span asp-validation-for="Team.OwnerUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.AllowJoin" /> @Html.DisplayNameFor(model => model.Team.AllowJoin)
                    </label>
                </div>
            </div>
            <div class="form-group" style="padding-left: 20px;">
                <label asp-for="Team.JoinPassword" class="control-label"></label>
                <input asp-for="Team.JoinPassword" class="form-control" />
                <span asp-validation-for="Team.JoinPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="@ViewBag.ReturnLink">Retour à la liste</a>
</div>

@section Scripts {

<script>
    function EnableJoinPassword() {
        var ddlsource = '#Team_AllowJoin';
        var checked = $(ddlsource).is(':checked');
        $('#Team_JoinPassword').prop("disabled", !checked);
    };

    $(document).ready(function () {
        $('input:checkbox[id$="AllowJoin"]').each(EnableJoinPassword).change(EnableJoinPassword);
    });
</script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
